<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Rocketsim.io</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" type="text/css" href="assets/css/loginStyle.css"/>
  <link rel="stylesheet" href="assets/css/editorStyle.css">
  <link rel="stylesheet" href="assets/css/navbarStyle.css">
</head>
<body>
  <nav><a href="/login"><img id="logo" src="/assets/img/rocket64x64.png" alt="rocket logo"/></a>
    <h1>Rocket Editor</h1>
    <div class="navlink"><a href="/login">Login</a></div>
    <div class="navlink"><a href="/signup">Sign up</a></div>
  </nav>
  <section id="signup">
    <form id="signupForm" name="signupForm" action="/signup" method="POST" class="mainForm">
      <label for="username">Username: </label>
      <input id="user" type="text" name="username" placeholder="username"/>
      <label for="pass">Password: </label>
      <input id="pass" type="password" name="pass" placeholder="password"/>
      <label for="pass2">Password: </label>
      <input id="pass2" type="password" name="pass2" placeholder="retype password"/>
      <a id="signupSubmit" href="#" class="formSubmit">Sign up</a>
    </form>
  </section>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="/assets/js/login.js" type="text/babel"></script>
</body>
</html>
