<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Rocketsim.io</title>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" href="assets/css/editorStyle.css">
  <link rel="stylesheet" href="assets/css/navbarStyle.css">
</head>
<body>
  <nav><a href="/login"><img id="logo" src="/assets/img/rocket64x64.png" alt="rocket logo"/></a>
    <h1>Rocket Editor</h1>
    <div class="navlink"><a href="/editor">Editor</a></div>
    <div class="navlink"><a href="/logout">Logout</a></div>
  </nav>

  <section id = "profile_info">
    {{#if profile}}
    <span>Name:  {{profile.username}}</span>
    <span>Date Created: {{ profile.createdData}}</span>
    <span>Number of Rockets: {{rockets.length}} </span>
    {{/if}}
  </section>

  <section id="rocket_container">
  <div class="rockets">
    {{#if rockets}}
      {{#each rockets}}
        <div class = "rocket"><img src = "/assets/img/rocket64x64.png" alt = "rocket" class = "rocketPicture"/>
          <h3 class = "Name">Name:
              {{#each this.description}}
              {{#if this.name}}
              {{this.name}}</h3>
            {{/if}}
            {{/each}}
          <p class = "description">Description: {{this.description.shortDesc}}</p>
          <h3 class = "dateCreated">Created On: {{this.description.createdData}}</h3>
        </div>
      {{/each}}
    {{else}}
        <h3 class = "emptyRockets">No Rockets</h3>
    {{/if}}
  </div>
</section>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js"></script>
  <script src="/assets/js/profile.js" type="text/babel"></script>
</body>
</html>
